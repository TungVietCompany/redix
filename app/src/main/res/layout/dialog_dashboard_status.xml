<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="11dp"
        android:weightSum="4"
        android:background="@drawable/customborder">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is this "
                android:id="@+id/textView120"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/dot_light_screen1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Complete ?"
                android:id="@+id/textView121"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/dot_light_screen1"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/linearLayout3">
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    android:id="@+id/radioButton3"
                    android:buttonTint="@android:color/white"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:buttonTint="@android:color/white"
                    android:id="@+id/radioButton4"
                    android:layout_alignTop="@+id/radioButton3" />
            </LinearLayout>
            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d24040"
            android:layout_weight="1"
            android:id="@+id/layout_user">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rate your experience with"
                android:id="@+id/textView122"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:paddingTop="5dp"
                android:textColor="@color/dot_light_screen1"/>

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView37"
                android:src="@drawable/img_temp1"
                android:layout_below="@+id/textView122"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Thuyet"
                android:id="@+id/textView123"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView37"
                android:layout_marginTop="5dp"
                android:textColor="@color/dot_light_screen1"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Promptness"
                android:textColor="@color/dot_light_screen1" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/RatingBar"
                android:rating="2.5"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Courtesy"
                android:textColor="@color/dot_light_screen1" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/RatingBar"
                android:rating="2"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Quality of Book"
                android:textColor="@color/dot_light_screen1" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/RatingBar"
                android:rating="1"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_rate_dashboard_status"
                android:layout_gravity="center"
                android:background="@drawable/change_pass"
                android:text="Rate now"
                android:textColor="@color/color_text"/>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imv_close_dialog_dashboard_status"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close_popup" />

            </RelativeLayout>

</RelativeLayout>