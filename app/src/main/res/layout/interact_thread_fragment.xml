<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_add_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/customborder"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="Add Thread"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_title_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_add_thread"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="Topic Name goes here "
            android:textColor="@color/color_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_count_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_add_thread"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/txt_title_thread"
            android:layout_toRightOf="@+id/txt_title_thread"
            android:text="(20)"
            android:textSize="18sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/btn_add_thread"
            android:layout_alignRight="@+id/btn_add_thread"
            android:layout_below="@+id/txt_title_thread"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_text_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view2">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_interact_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
