<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RateFragment">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/btn_like_rate"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView12"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="We love to hear from you"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f75656" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="Love the app?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_rate_later"
                    android:layout_width="145dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Remind me later"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/dot_light_screen2"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg"
                    />

                <Button
                    android:id="@+id/btn_rate_now"
                    android:layout_width="145dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Rate it now!"
                    android:textAllCaps="false"
                    android:textColor="@color/dot_light_screen2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="5sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imageView13"

                    android:background="@drawable/btn_bg" />
            </TableRow>
            android:background="@drawable/bg_notification_popup" />
        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>
