<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/dot_light_screen2"
    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f06667"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow2"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="32dp"
            android:id="@+id/img_menu_bottom_location"
            android:src="@drawable/btn_locate_not_active"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:id="@+id/img_menu_bottom_comment"
            android:src="@drawable/btn_locate_interact_not_active"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/imageView15"
            android:layout_toStartOf="@+id/imageView15"
            android:layout_gravity="bottom" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:id="@+id/img_menu_bottom_camera"
            android:src="@drawable/btn_locate_listing_not_active"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_alignTop="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:id="@+id/img_menu_bottom_bag"
            android:src="@drawable/btn_locate_wishbroad_not_active"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView15"
            android:layout_toEndOf="@+id/imageView15"
            android:layout_gravity="bottom" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="32dp"
            android:id="@+id/img_menu_bottom_user"
            android:src="@drawable/btn_locate_profile_not_active"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </TableRow>



</RelativeLayout>
