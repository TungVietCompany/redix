<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dot_light_screen2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back_sigup"
            android:layout_width="14dp"
            android:layout_height="26dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="178dp"
            android:layout_height="45dp"
            android:layout_marginLeft="65dp"
            android:id="@+id/icon_sign_up_home"/>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:id="@+id/linearLayout6">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:fontFamily="sans-serif-thin"
            android:hint="First name"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText

            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:hint="Last name"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout5"
        android:layout_marginRight="15dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/linearLayout6">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Username"
            android:maxLines="1"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Email"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:inputType="none"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:focusable="false"
            android:hint="Birthday"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme">

        </EditText>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Phone"
            android:maxLines="1"
            android:phoneNumber="true"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:hint="Password"
            android:password="true"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:hint="Confirm Password"
            android:password="true"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="223dp"
            android:layout_height="36dp"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_sign_in"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"

        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:id="@+id/checksignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorCheckbox"
            android:fontFamily="sans-serif-thin"
            android:text="I Agree"

            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-thin"
            android:text="Terms and conditions"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"

            />
    </LinearLayout>
</RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>