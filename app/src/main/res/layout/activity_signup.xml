<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dot_light_screen2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back_sigup"
            android:layout_width="14dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_sign_in_back"
            android:textColor="@android:color/holo_red_light"
            />

        <ImageView
            android:layout_width="178dp"
            android:layout_height="45dp"
            android:layout_marginLeft="65dp"
            android:src="@drawable/test" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:weightSum="2">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:hint="First name"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText

            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:hint="Last name"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Username"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Email"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/birthday"
            android:hint="Birthday"
            android:textColorHint="@color/color_text_hint"
            android:layout_width="match_parent"
            android:theme="@style/MyEditTextTheme"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Phone"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Password"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:hint="Confirm Password"
            android:textColorHint="@color/color_text_hint"
            android:theme="@style/MyEditTextTheme" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="223dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_sign_in"
            android:text="Sign up"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/white"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"

        >

        <CheckBox
            android:id="@+id/checksignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorCheckbox"
            android:fontFamily="sans-serif-thin"
            android:text="I Agree"

            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="Terms and conditions"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"

            />
    </LinearLayout>

</LinearLayout>