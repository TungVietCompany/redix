<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topic_interact"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView_next_interac"
        android:layout_toStartOf="@+id/imageView_next_interac"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic Name goes here "
                android:id="@+id/txt_title_interact"
                android:textSize="18sp"
                android:textColor="@color/color_topic_interact"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(23)"
                android:id="@+id/txt_count_interact"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/imageView_next_interac"
        android:layout_toStartOf="@+id/imageView_next_interac"
        android:id="@+id/tableLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updated on 18-06-16"
            android:id="@+id/txt_time_update_interact"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_text_time_update_interact"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </TableLayout>

    <ImageView
        android:layout_width="11dp"
        android:layout_height="24dp"
        android:id="@+id/imageView_next_interac"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/textView79"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_listing"/>
</RelativeLayout>
