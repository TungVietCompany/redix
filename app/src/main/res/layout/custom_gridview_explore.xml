<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_book"
        android:layout_marginTop="25dp"
        android:src="@drawable/img_temp1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_hint"
        android:id="@+id/view"
        android:layout_below="@+id/img_book"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Las Painting of Sara de Vos"
        android:id="@+id/txt_title_book"
        android:paddingLeft="5dp"
        android:textColor="@color/color_title_book"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="by Gandalf"
        android:id="@+id/txt_author_book"
        android:layout_below="@+id/txt_title_book"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_author_book"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:id="@+id/tableRow"
        android:weightSum="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_explore_swap"
            android:src="@drawable/swap" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_text_hint"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_explore_free"
            android:src="@drawable/free_explore"
            android:layout_alignTop="@+id/tableRow"
            android:layout_toRightOf="@+id/tableRow"
            android:layout_toEndOf="@+id/tableRow" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_text_hint"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_explore_buy"
            android:src="@drawable/cart" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_text_hint"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />

    </TableRow>


</RelativeLayout>
