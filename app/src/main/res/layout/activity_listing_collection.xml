<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="redix.booxtown.activity.ListingCollectionActivity">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include61" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/menu_bottom_listing_collec" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@+id/include61"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:id="@+id/tableRow5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a book"
            android:id="@+id/txt_add_book1"
            android:gravity="center"
            android:background="@drawable/bg_button_listings"
            android:layout_weight="1.15"
            android:textColor="@color/dot_light_screen1"
            android:padding="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My listings (46)"
            android:layout_weight="0.84"
            android:gravity="center"
            android:id="@+id/txt_my_listings1"
            android:background="@color/dot_light_screen1"
            android:textColor="@color/color_text"
            android:padding="9dp" />
    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/tableRow5"
        android:layout_alignLeft="@+id/tableRow5"
        android:layout_alignStart="@+id/tableRow5"
        android:layout_above="@+id/menu_bottom_listing_collec">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/menu_editlisting" />
    </ScrollView>

</RelativeLayout>
