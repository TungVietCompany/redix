<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dot_light_screen2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.siyamed.shapeimageview.CircularImageView

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_test"
        app:siBorderColor="@color/dot_light_screen2"
        app:siBorderWidth="1dp"
        android:paddingBottom="10dp"
        android:id="@+id/view5"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gandalf"
        android:id="@+id/textView64"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_title_book"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view5"
        android:layout_toEndOf="@+id/view5"
        android:layout_marginTop="10dp" />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:rating="2"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/textView64"
        android:layout_alignLeft="@+id/textView64"
        android:layout_alignStart="@+id/textView64"
        android:layout_marginTop="5dp"
        android:id="@+id/ratingBar5" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView10"
        android:layout_alignBottom="@+id/ratingBar5"
        android:layout_toRightOf="@+id/ratingBar5"
        android:layout_toEndOf="@+id/ratingBar5"
        android:layout_marginLeft="5dp"
        android:src="@drawable/btn_rank_one" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView28"
        android:src="@drawable/btn_rank_two"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView39"
        android:layout_alignBottom="@+id/imageView28"
        android:layout_toRightOf="@+id/imageView28"
        android:layout_toEndOf="@+id/imageView28"
        android:src="@drawable/btn_rank_three" />

</RelativeLayout>
