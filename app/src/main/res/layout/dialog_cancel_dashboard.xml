<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/customborder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to cancel"
            android:id="@+id/textView124"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/dot_light_screen1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This transaction"
            android:id="@+id/textView125"
            android:layout_below="@+id/textView124"
            android:gravity="center"
            android:textColor="@color/dot_light_screen1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView125"
            android:layout_centerHorizontal="true"
            android:background="@drawable/change_pass"
            android:text="Yes"
            android:textColor="@color/color_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_cancel_dialog_dashboard" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_close_dialog_cancel_dashboard"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close_popup" />
    </RelativeLayout>
</RelativeLayout>