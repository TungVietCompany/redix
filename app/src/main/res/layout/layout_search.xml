<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f8f3f3"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editSearch"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Search"
            android:fontFamily="sans-serif-thin"
            android:textColorHint="@color/color_text_hint"
            android:paddingRight="35dp"
            android:layout_alignParentTop="false"
            android:layout_toStartOf="@+id/btn_filter_explore"
            android:layout_toLeftOf="@+id/btn_filter_explore" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_filter_explore"
            android:src="@drawable/filter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignTop="@+id/editSearch"
            android:layout_alignBottom="@+id/editSearch"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:background="@drawable/icon_search"
            android:layout_alignTop="@+id/editSearch"
            android:layout_alignBottom="@+id/editSearch"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/btn_filter_explore"
            android:layout_marginRight="10dp" />
        </RelativeLayout>
</RelativeLayout>