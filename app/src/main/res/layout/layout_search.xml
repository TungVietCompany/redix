<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/background_listing"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editSearch"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Search"
            android:fontFamily="sans-serif-thin"
            android:textColorHint="@color/color_text_hint"
            android:paddingRight="35dp"
            android:layout_alignParentTop="false"
            android:layout_toStartOf="@+id/btn_filter_explore"
            android:layout_toLeftOf="@+id/btn_filter_explore"
            android:paddingLeft="10dp"
            android:layout_marginRight="-10dp" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_filter_explore"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignTop="@+id/editSearch"
            android:layout_alignBottom="@+id/editSearch"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:id="@+id/btn_search"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_filter_explore" />
        </RelativeLayout>
</RelativeLayout>