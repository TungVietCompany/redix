<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:context=".activity.TestActivity"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rl_notification_infor1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imv_menu_notification_infor1"
            android:src="@drawable/img_temp1"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dominic"
            android:id="@+id/textView16"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imv_menu_notification_infor1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" />

        <RatingBar
            android:id="@+id/myRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="false"
            android:layout_below="@+id/textView16"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginRight="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:layout_below="@+id/textView16"
            android:layout_toRightOf="@+id/myRatingBar"
            android:layout_toEndOf="@+id/myRatingBar"
            android:src="@drawable/icon_notification_infor2"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView17"
            android:layout_below="@+id/textView16"
            android:layout_toRightOf="@+id/imageView16"
            android:layout_toEndOf="@+id/imageView16"
            android:src="@drawable/icon_notification_infor3"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView18"
            android:layout_below="@+id/textView16"
            android:layout_toRightOf="@+id/imageView17"
            android:layout_toEndOf="@+id/imageView17"
            android:src="@drawable/icon_notification_infor1"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="liked your book"
            android:id="@+id/txt_notification_infor1_phone"
            android:layout_below="@+id/myRatingBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#dc4c4c"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/txt_notification_cross_infor1"
            android:layout_below="@+id/imv_menu_notification_infor1"
            android:layout_alignRight="@+id/txt_notification_infor1_phone"
            android:layout_alignEnd="@+id/txt_notification_infor1_phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#f28585"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>