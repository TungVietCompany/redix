<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/customborder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post a book to Wishboard"
            android:id="@+id/textView138"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="@color/dot_light_screen1"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="Title"
            android:textColorHint="@color/dot_light_screen2"
            android:layout_below="@+id/textView138"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/dot_light_screen2"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText12"
            android:hint="Author"
            android:textColorHint="@color/dot_light_screen2"
            android:layout_below="@+id/editText"
            android:backgroundTint="@color/dot_light_screen2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText13"
            android:hint="Comment(50 character)"
            android:textColorHint="@color/dot_light_screen2"
            android:layout_below="@+id/editText12"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/dot_light_screen2"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/change_pass"
            android:id="@+id/btn_submit_dialog_post_book_wishbroad"
            android:gravity="center_vertical|center"
            android:layout_below="@+id/editText13"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_close_dialog_post_book_wishbroad"
            android:src="@drawable/btn_wishbroad_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
