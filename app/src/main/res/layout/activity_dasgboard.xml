<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="redix.booxtown.activity.DasgboardActivity">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include52" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/include52"
    android:layout_above="@+id/include55">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include52"
        android:layout_alignLeft="@+id/include52"
        android:layout_alignStart="@+id/include52">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_dashboard_top"
        android:id="@+id/include53"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_dashboard_middle"
        android:layout_below="@+id/include53"
        android:layout_alignLeft="@+id/include53"
        android:layout_alignStart="@+id/include53"
        android:layout_alignRight="@+id/include53"
        android:layout_alignEnd="@+id/include53"
        android:id="@+id/include54" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_dashboard_bottom"
        android:layout_below="@+id/include54"
        android:layout_alignLeft="@+id/include54"
        android:layout_alignStart="@+id/include54"
        android:layout_alignRight="@+id/include54"
        android:layout_alignEnd="@+id/include54" />
    </RelativeLayout>
</ScrollView>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/menu_bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/include55" />

</RelativeLayout>
